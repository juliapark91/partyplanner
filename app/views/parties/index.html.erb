<p id="notice"><%= notice %></p>

<h1>Listing Parties</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Started at</th>
      <th>Ended at</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parties.each do |party| %>
      <tr>
        <td><%= link_to "#{party.title}", party %></td>
        <td><%= party.started_at %></td>
        <td><%= party.ended_at %></td>
        <td><%= party.city %></td>
        <td><%= party.state %></td>
        <td><%= party.zip_code %></td>
        <td><%= party.phone %></td>
        <td><%= party.email %></td>
        <td><%= link_to "#{party.guests.count} Guests", party_guests_path(party) %></td>
        <td><%= link_to 'Edit', edit_party_path(party) %></td>
        <td><%= link_to 'Destroy', party, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

